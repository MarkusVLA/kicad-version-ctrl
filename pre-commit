#!/usr/bin/env python3
import subprocess
import sys

# Run version update script
result = subprocess.run(['python3', 'update-kicad-version.py'], capture_output=True)

if result.returncode != 0:
    print("Failed to update KiCad version info")
    sys.exit(1)

# Stage the updated project files
subprocess.run(['git', 'add', '*.kicad_pro'])

